{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
        "no-invalid-regexp": ["error"],
        "no-irregular-whitespace": ["error"],
        "prettier/prettier":
        [
            "error",
            {
                "singleQuote": true,
                "useTabs": true,
                "tabWidth": 4,
                "semi": false,
                "bracketSpacing": true,
                "requirePragma": false,
                "parser": "flow"
            }
        ]
    }
}
